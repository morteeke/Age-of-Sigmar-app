<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Age_of_Sigmar_app.Views.MainMenuView"
             xmlns:viewmodel="clr-namespace:Age_of_Sigmar_app.ViewModels"
             x:DataType="viewmodel:MainMenuViewModel"
             Title="MainMenuView">
    <VerticalStackLayout Margin="20"
                         Spacing="10">

        <Button Text="Army List" 
                Command="{Binding GoToArmyListCommand}"/>
        
        <Button Command="{Binding GoToPathToGloryCommand}"
                Text="Path to Glory!"/>
    </VerticalStackLayout>
</ContentPage>